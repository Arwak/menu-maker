{%  extends "leftSideBarBase.twig" %}
{% block main_title %}
    <p class="w3-xlarge">Crear menÃº -> {{ title }}</p>
{% endblock %}
{% block main_content %}

    <div class="w3-row w3-red">
        <div class="w3-col s6 w3-center w3-border">
            <p class="w3-xlarge">Plats disponibles</p>
        </div>
        <div class="w3-col s6 w3-center w3-border">
            <p class="w3-xlarge">{{ num_plats }} Plats afegits</p>
        </div>
    </div>
    <br>

    <div class="w3-row">
        <div class="w3-col s6 w3-center w3-border-right">
            <input class="w3-input w3-border w3-round w3-dark-gray w3-hover-white" id="searchInput" onkeyup="search()" style="width: 90%; margin: auto" placeholder="Buscar" type="text">
        </div>
        <div class="w3-col s6 w3-center w3-border-left">
            <a style="width: 90%; margin: auto" class="w3-button w3-round w3-dark-gray w3-hover-white w3-border" onclick="remove_all()">Treure tot</a>
        </div>
    </div>
    <br>
    <div class="w3-row">
        <div class="w3-col s6 w3-center w3-border">

            <ul class="w3-ul " id="list_no">
                {% for dish in dishes %}
                    <li class="w3-display-container  w3-hover-green" id="{{ dish.get_id_Dish }}" onclick="add_dish({{ dish.get_id_Dish }})" ><a>{{ dish.get_alias }}</a>
                        <span class="w3-button w3-display-right"><i class="fa fa-arrow-right" aria-hidden="true"></i></span>
                    </li>
                {% endfor %}

            </ul>

        </div>

        <div class="w3-col s6 w3-center w3-border">

            <ul class="w3-ul" id="list_yes">
                <li class="w3-display-container w3-hover-red" id="2" onclick="remove_dish(2)"><a>2</a>
                    <span class="w3-button w3-display-left"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
                </li>
                <li class="w3-display-container w3-hover-red" id="4" onclick="remove_dish(4)"><a>macarena4</a>
                    <span class="w3-button w3-display-left"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
                </li>
                <li class="w3-display-container w3-hover-red" id="6" onclick="remove_dish(6)"><a>6</a>
                    <span class="w3-button w3-display-left"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
                </li>
                <li class="w3-display-container w3-hover-red" id="7" onclick="remove_dish(7)"><a>amanida verda</a>
                    <span class="w3-button w3-display-left"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
                </li>
                <li class="w3-display-container w3-hover-red" id="8" onclick="remove_dish(8)"><a>amanida de formatge de cabra</a>
                    <span class="w3-button w3-display-left"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
                </li>
                <li class="w3-display-container w3-hover-red" id="9" onclick="remove_dish(9)"><a>magret de porc a la brasa</a>
                    <span class="w3-button w3-display-left"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}

